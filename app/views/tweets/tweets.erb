<% if logged_in? %>
<h1>Latest Tweets</h1>
<h2>Welcome, <%= @user.username %>!</h2>
<br /><a href="/tweets/new">New Tweet</a>
<ul>
<% @tweets.each do |tweet| %>
<li><%=tweet.content%></li>
<li><span style="font-size: 0.8em">--<%=tweet.user.username%></span>
</li>
<hr />
<% end %>
</ul>

<p>
  <a href="/logout">Logout</a>
</p>

<% else %>
<a href="/login"><button type="button">Log In</button></a> | 
<a href="/signup"><button type="button">Sign Up</button></a>

<% end %>
